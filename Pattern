static void Pattern(int N){

    System.out.println("*");

    for(int i=1;i<=N-1;i++){
        for(int j=1;j<=i+2;j++){
            if(i==N-1 || j==1 || j==i+2 )
            System.out.print("*");
            else
            System.out.print("^");


        }
        System.out.println();
    }
}
